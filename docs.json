{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "Termpad",
  "colors": {
    "primary": "#ccff00",
    "light": "#d9ff4d",
    "dark": "#a3e635"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "installation",
              "quickstart"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/parallel-worktrees",
              "features/git-worktrees",
              "features/terminal-management",
              "features/scripts",
              "features/code-review",
              "features/notifications"
            ]
          },
          {
            "group": "Use Cases",
            "pages": [
              "use-cases/feature-development",
              "use-cases/bug-fixing",
              "use-cases/code-review-workflow",
              "use-cases/experimentation"
            ]
          },
          {
            "group": "How-to Guides",
            "pages": [
              "guides/add-project",
              "guides/create-worktree",
              "guides/configure-scripts",
              "guides/manage-terminals",
              "guides/review-changes"
            ]
          },
          {
            "group": "Support",
            "pages": [
              "troubleshooting",
              "faq"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Home",
          "href": "https://termpad.com",
          "icon": "house"
        },
        {
          "anchor": "Releases",
          "href": "https://github.com/meganide/termpad-releases/releases",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Home",
        "href": "https://termpad.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Download",
      "href": "https://github.com/meganide/termpad-releases/releases"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/renas_dev",
      "github": "https://github.com/meganide/termpad-releases/releases"
    }
  }
}
