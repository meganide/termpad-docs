{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "Termpad",
  "colors": {
    "primary": "#ccff00",
    "light": "#d9ff4d",
    "dark": "#a3e635"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Home",
          "href": "https://termpad.com",
          "icon": "house"
        },
        {
          "anchor": "Releases",
          "href": "https://github.com/meganide/termpad-releases/releases",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Home",
        "href": "https://termpad.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://termpad.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/renas_dev",
      "github": "https://github.com/meganide/termpad-releases/releases"
    }
  }
}
